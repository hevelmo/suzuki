<div class="contact_content">
    <div id="form-wrapper" >
        <form id="contactos">
            <!-- Alerta -->
            <div class="contact_alert"><span>Los siguientes campos son erróneos:</span></div>

            <!-- Formulario -->
            <div class="contact_elements">
                <input type="hidden" name="concesionaria" id="contact_concesionaria" value="Suzuki Guadalajara">
                <div class="contact_element a">
                    <fieldset>
                        <label for="contact_name"><span style="color: red;" class="fa fa-asterisk"></span> Nombre</label>
                        <input name="name" id="contact_name" type="text" class="icon buddy" value="" data-validation-data="required|name" placeholder="Nombre">
                        <p class="invalid-message" id="error_nombre">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>
                </div>
                <div class="contact_element b">
                    <fieldset>
                        <label for="contact_lastname"><span style="color: red;" class="fa fa-asterisk"></span> Apellido</label>
                        <input name="lastname" id="contact_lastname" type="text" class="icon buddy" value="" data-validation-data="required|name" placeholder="Apellidos Paterno y Materno">
                        <p class="invalid-message" id="error_nombre">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>
                </div>


                <div class="clearfix"></div>

            </div>

            <div class="contact_elements">
                <div class="contact_element a">
                    <fieldset>
                        <label for="contact_email"><span style="color: red;" class="fa fa-asterisk"></span> Correo electrónico</label>
                        <input name="email"  id="contact_email" type="email" class="icon email" value="" data-validation-data="required|email" placeholder="Correo electrónico">
                        <p class="invalid-message" id="error_correo">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>
                </div>
                <!--
                <div class="contact_element b">
                    <fieldset>
                        <label for="contact_city"><span style="color: red;" class="fa fa-asterisk"></span> Ciudad</label>
                        <input id="contact_city" type="text" value="" data-validation-data="required|address" placeholder="Ciudad">
                        <p class="invalid-message" id="error_ciudad">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>
                </div>
                -->

                <!--
                <div class="contact_element a">
                    <fieldset>
                        <label for="contact_delegation"><span style="color: red;" class="fa fa-asterisk"></span> Delegación o municipio</label>
                        <input id="contact_delegation" type="text" value="" data-validation-data="required|address" placeholder="Delegación o municipio">
                        <p class="invalid-message" id="error_delegacion">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>
                </div>
                -->

            </div>

            <div class="contact_elements">

                <div class="contact_element b">
                    <fieldset>
                        <label for="contact_department"><span style="color: red;" class="fa fa-asterisk"></span> Departamento</label>
                        <select name="departamento" id="contact_department" type="dropdown" class="seleccionar" style="width: 256px;">
                            <option label="Selecccionar" selected="selected" value="">Selecciona Departamento</option>
                            <option value="ventas"          >Ventas</option>
                            <option value="servicio"        >Servicio</option>
                            <option value="refacciones"     >Refacciones / Accesorios</option>
                            <option value="mercadotecnia"   >Mercadotecnia</option>
                            <option value="otros"           >Otros</option>
                        </select>
                        <p class="invalid-message" id="error_departamento">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>
                </div>

                <div class="contact_element a">
                    <fieldset>
                        <label for="contact_car_key"><span style="color: red;" class="fa fa-asterisk"></span> Auto</label>
                        <select name="car" id="contact_car_key" type="dropdown" class="seleccionar form-control selectpicker" style="width: 256px;" >
                            <option label="Selecccionar" selected="selected" value="">Selecciona Modelo</option>
                            <option value="swift-sport"     >Swift Sport</option>
                            <option value="swift"           >Swift</option>
                            <!--<option value="sx4-crossover"   >SX4 Crossover</option>
                            <option value="sx4-sedan"       >SX4 Sedán</option>-->
                            <option value="kizashi"         >Kizashi</option>
                            <option value="grand-vitara"    >Grand Vitara</option>
                            <option value="s-cross"         >S-Cross</option>
                        </select>
                        <p class="invalid-message" id="error_auto">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>
                </div>
            </div>
            <div class="contact_elements">
                <div class="contact_element ab">
                    <fieldset>
                        <label for="contact_message"><span style="color: red;" class="fa fa-asterisk"></span> Mensaje:</label>
                        <textarea name="message" class="escribir2" id="contact_message" data-validation-data="required|address"></textarea>
                        <p class="invalid-message" id="error_mensaje">Este campo es obligatorio<span>&nbsp;</span></p>
                    </fieldset>

                    <fieldset class="fieldset-radio-checkbox">
                        <label for="contact-newsletter" class="label-checkbox checkbox-checked">
                            <input name="news" type="checkbox" id="contact-newsletter" name="chk-newsletter" checked="checked"> Deseo recibir noticias y promociones.
                        </label>
                    </fieldset>

